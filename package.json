{
  "name": "limb",
  "version": "1.0.0",
  "repository": "git@github.com:dva/limb.git",
  "author": "dva",
  "license": "MIT",
  "private": true,
  "scripts": {
    "analyze": "source-map-explorer 'dist/*.{js,js.map}'",
    "browserslist": "npx browserslist",
    "build:check": "yarn type-check && yarn lint",
    "build": "webpack --config webpack.prod.js",
    "lint:css:fix": "yarn lint:css --fix",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:fix": "yarn lint:ts:fix && yarn lint:js:fix && yarn lint:css:fix",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:js": "standard '**/*.js'",
    "lint:ts:check": "tslint-config-prettier-check ./tslint.json",
    "lint:ts:fix": "yarn lint:ts --fix",
    "lint:ts": "tslint -p ./tsconfig.json -c ./tslint.json",
    "lint": "yarn lint:ts && yarn lint:js && yarn lint:css",
    "now-build": "yarn build",
    "pretty": "prettier --write 'src/**/*.{tsx,ts}'",
    "serve:debug": "DEBUG=* yarn serve",
    "serve": "webpack-dev-server --config webpack.dev.js --hot",
    "type-check:check": "yarn type-check --listFiles",
    "type-check:trace": "yarn type-check --traceResolution",
    "type-check:watch": "yarn type-check --watch",
    "type-check": "tsc"
  },
  "dependencies": {
    "@babel/runtime": "^7.3.1",
    "@types/clean-webpack-plugin": "^0.1.2",
    "@types/debug": "^4.1.0",
    "@types/lodash": "^4.14.118",
    "@types/luxon": "^1.4.1",
    "@types/node": "^11.9.2",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/styled-components": "^4.1.6",
    "@types/webpack": "^4.4.22",
    "@types/webpack-merge": "^4.1.3",
    "debug": "^4.0.1",
    "lodash": "^4.17.10",
    "luxon": "^1.3.3",
    "polished": "^3.0.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-hot-loader": "^4.3.5",
    "react-router-dom": "^4.3.1",
    "sanitize.css": "^8.0.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.3.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-polished": "^1.1.0",
    "babel-plugin-styled-components": "^1.10.0",
    "clean-webpack-plugin": "^2.0.0",
    "css-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "lodash-webpack-plugin": "^0.11.5",
    "node-sass": "^4.9.3",
    "prettier": "1.16.4",
    "sass-loader": "^7.1.0",
    "serve": "^10.1.2",
    "size-plugin": "^1.1.2",
    "source-map-explorer": "^1.6.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.0",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "tslint-react-hooks": "^1.1.0",
    "typescript": "^3.2.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.6",
    "webpack-merge": "^4.2.1"
  }
}
